<mvc:View
  controllerName="app.controller.HelloPanel"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <Panel 
    headerText="{i18n>helloPanelTitle}"
    class="sapUiResponsiveMargin"
    width="auto">
    <content>
      <Button
        id="dialogButton"
        icon="sap-icon://world"
        text="{i18n>buttonShowDialog}"
        press="onShowDialog"
        class="sapUiSmallMarginEnd"/>
      <Button
        text="{i18n>buttonTextSayHi}"
        press="onSayHi"
        class="sapUiSmallMarginEnd"/>
      <Input
        value="{/recipient/name}"
        valueLiveUpdate="true"
        width="30%"/>
      <FormattedText
        htmlText="{i18n>textHello} {/recipient/name}"
        class="sapUiSmallMargin"/>
    </content>
  </Panel>
</mvc:View>