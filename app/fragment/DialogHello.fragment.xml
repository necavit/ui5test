<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="{i18n>dialogHello} {/recipient/name}">
      <content>
        <core:Icon
          src="sap-icon://hello-world"
          size="4rem"
          class="sapUiSmallMargin"/>
      </content>
      <beginButton>
        <Button
          text="{i18n>buttonCloseDialog}"
          press="onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>